{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "include": [
    "src/**/*.ts",
    "fixtures/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules/**",
    "coverage/**",
    "playwright-report/**",
    "test-results/**",
    "src/types/**",
    "global-teardown.ts"
  ],
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov",
    "json"
  ],
  "report-dir": "./coverage",
  "temp-dir": "./.nyc_output",
  "check-coverage": false,
  "per-file": true,
  "lines": 70,
  "statements": 70,
  "functions": 70,
  "branches": 60,
  "skip-full": false,
  "produce-source-map": true,
  "instrument": true,
  "sourceMap": true,
  "require": [
    "ts-node/register"
  ],
  "extensions": [
    ".ts"
  ]
}
